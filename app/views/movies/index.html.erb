<h1>Movies</h1>

<form action='<%= movies_path %>'>
  <label>Pesquisar:</label>
  <input type='text' name='q' value='<%= params[:q] %>'>
  <input type='submit'>
</form>

<% @movies.each do |movie| %>

  <h3><%= movie.title %></h3>
  <h4><%= movie.year %></h4>
  <p>Diretor: <strong><%= "#{movie.director.first_name} #{movie.director.last_name}" %></strong></p>
  <p><%= movie.syllabus %></p>
  <hr>

<% end %>